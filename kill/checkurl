#!/bin/bash

B='\033[1;31m'
C='\033[0;36m'
R='\033[0m'

if curl --output /dev/null --silent --head --fail "$1"; then
  echo -e "$C ################################################################ "
  echo -e " URL exists:   $1"
  echo -e " ################################################################ $R"
else
  echo -e "$B ################################################################ "
  echo -e " URL does not exist:   $1"
  echo -e " ################################################################ $R"
fi
